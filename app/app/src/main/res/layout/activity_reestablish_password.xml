<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_sc_bold"
        android:text="Restablecer contraseña"
        android:textAlignment="center"
        android:textColor="@color/logo"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.202" />

    <EditText
        android:id="@+id/tokenPassword"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/alegreya_bold"
        android:hint="Código"
        android:maxLength="30"
        android:textColor="@color/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alegreya_bold"
        android:hint="Nueva contraseña"
        android:maxLength="30"
        android:textColor="@color/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tokenPassword"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/newPassword2"
        android:layout_width="250dp"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alegreya_bold"
        android:hint="Confirmar contraseña"
        android:maxLength="30"
        android:textColor="@color/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newPassword"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/showPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alegreya_bold"
        android:layout_marginTop="5dp"
        android:text="@string/mostrar_contraseña"
        android:textColor="@color/logo"
        app:layout_constraintStart_toStartOf="@id/newPassword2"
        app:layout_constraintTop_toBottomOf="@id/newPassword2"/>

    <Button
        android:id="@+id/submitButton"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@android:color/transparent"
        android:fontFamily="@font/alegreya_sc_bold"
        android:text="Enviar"
        android:textColor="@color/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/showPassword" />

</androidx.constraintlayout.widget.ConstraintLayout>